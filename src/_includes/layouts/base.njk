<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }}{% if title and title != site.name %} | {{ site.name }}{% endif %}</title>
    <meta name="description" content="{{ description or site.description }}" />

    <link rel="canonical" href="{{ site.url }}{{ page.url | url }}" />
    <link rel="stylesheet" href="{{ '/assets/site.css' | url }}" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500&display=swap" rel="stylesheet" />

    <meta property="og:site_name" content="{{ site.name }}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ description or site.description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ site.url }}{{ page.url | url }}" />

    <meta name="twitter:card" content="summary" />
    <meta name="theme-color" content="#0c1215" />

    <script>
      document.documentElement.classList.remove('no-js');
      document.documentElement.classList.add('js');
    </script>
  </head>
  <body class="{{ pageClass or '' }}">
    <a class="skip" href="#content">Skip to content</a>

    {% set u = page.url %}

    <header class="site-header" data-header>
      <div class="wrap header-inner">
        <a class="brand" href="{{ '/' | url }}">
          <span class="brand-stack">
            <img
              class="brand-plant"
              src="{{ '/assets/images/plant-mark.png' | url }}"
              data-theme-src-light="{{ '/assets/images/plant-mark.png' | url }}"
              data-theme-src-neutral="{{ '/assets/images/plant-mark.png' | url }}"
              data-theme-src-dark="{{ '/assets/images/plant-mark-dark.png' | url }}"
              alt=""
              aria-hidden="true"
              width="190"
              height="92"
              loading="eager"
              decoding="async"
            />
            <span class="brand-title">MELISSA KESTER, LMFT</span>
          </span>
        </a>

        <div class="header-actions">
          <button class="theme-btn" type="button" data-theme-toggle aria-label="Theme">LIGHT</button>

          <button class="nav-toggle" type="button" aria-controls="site-nav" aria-expanded="false" data-nav-toggle>
            <span class="nav-toggle__label">Menu</span>
            <span class="nav-toggle__lines" aria-hidden="true"></span>
          </button>
        </div>

        <nav class="site-nav" id="site-nav" aria-label="Primary" data-site-nav>
          <a class="{% if u == '/about/' %}is-active{% endif %}" href="{{ '/about/' | url }}">About</a>
          <a class="{% if u == '/services/' or (u | startsWith('/services/')) %}is-active{% endif %}" href="{{ '/services/' | url }}">Services</a>
          <a class="{% if u == '/melissa/' or u == '/team/melissa-kester/' %}is-active{% endif %}" href="{{ '/melissa/' | url }}">Melissa</a>
          <a class="{% if u == '/blog/' or u == '/articles/' or (u | startsWith('/posts/')) %}is-active{% endif %}" href="{{ '/blog/' | url }}">Blog</a>
          <a class="nav-contact {% if u == '/contact/' %}is-active{% endif %}" href="{{ '/contact/' | url }}" data-pulse>Contact</a>
        </nav>
      </div>
    </header>

    <main id="content" class="wrap">
      {% if noPanel %}
        {% if u != '/' and title and (showTitle is not defined or showTitle != false) %}
          {% set sub = description or excerpt %}
          <header class="page-head reveal">
            <h1 class="page-title">{{ title }}</h1>
            {% if sub %}<p class="page-sub">{{ sub }}</p>{% endif %}
          </header>
        {% endif %}

        {% if noProse %}
          {{ content | safe }}
        {% else %}
          <div class="prose">
            {{ content | safe }}
          </div>
        {% endif %}
      {% else %}
        <div class="page-panel">
          {% if u != '/' and title and (showTitle is not defined or showTitle != false) %}
            {% set sub = description or excerpt %}
            <header class="page-head reveal">
              <h1 class="page-title">{{ title }}</h1>
              {% if sub %}<p class="page-sub">{{ sub }}</p>{% endif %}
            </header>
          {% endif %}

          {% if noProse %}
            {{ content | safe }}
          {% else %}
            <div class="prose">
              {{ content | safe }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </main>

    <footer class="site-footer">
      <div class="wrap footer-inner">
        <div>
          <p class="footer-brand">{{ site.name }}</p>
          <p class="fine">{{ site.footerLine }}</p>
        </div>
        <p class="fine">Â© {{ "" | year }} {{ site.name }}.</p>
      </div>
    </footer>

    <script type="module" src="{{ '/assets/site.js' | url }}" defer></script>
  </body>
</html>
