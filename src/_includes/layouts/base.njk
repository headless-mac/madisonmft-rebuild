<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }}{% if title and title != site.name %} | {{ site.name }}{% endif %}</title>
    <meta name="description" content="{{ description or site.description }}" />

    <link rel="canonical" href="{{ site.url }}{{ page.url | url }}" />
    <link rel="stylesheet" href="{{ '/assets/site.css' | url }}" />

    <meta property="og:site_name" content="{{ site.name }}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ description or site.description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ site.url }}{{ page.url | url }}" />

    <meta name="twitter:card" content="summary" />
  </head>
  <body>
    <a class="skip" href="#content">Skip to content</a>

    <header class="site-header">
      <div class="wrap">
        <a class="brand" href="{{ '/' | url }}">
          {% if site.logo %}<img class="brand-logo" src="{{ site.logo | url }}" alt="{{ site.name }}" width="48" height="48" loading="eager" decoding="async" />{% endif %}
          <span class="brand-text">{{ site.name }}</span>
        </a>
        <nav aria-label="Primary">
          <a href="{{ '/about/' | url }}">About</a>
          <a href="{{ '/services/' | url }}">Services</a>
          <a href="{{ '/team/' | url }}">Team</a>
          <a href="{{ '/articles/' | url }}">Articles</a>
          <a class="cta" href="{{ '/contact/' | url }}">Contact</a>
        </nav>
      </div>
    </header>

    <main id="content" class="wrap">
      {{ content | safe }}
    </main>

    <footer class="site-footer">
      <div class="wrap">
        <p><strong>{{ site.name }}</strong></p>
        <p>{{ site.footerLine }}</p>
        <p class="fine">Â© {{ "" | year }} {{ site.name }}.</p>
      </div>
    </footer>
  </body>
</html>
